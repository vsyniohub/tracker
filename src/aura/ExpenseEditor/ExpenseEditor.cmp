<aura:component implements="flexipage:availableForAllPageTypes" access="global">
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <aura:attribute name="expenseId" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:recordEditForm recordId="{!v.expenseId}" onsuccess="{!c.updateClose}" objectApiName="Expense__c">
        <lightning:messages />
        <lightning:inputField fieldName="Subject__c" />
        <lightning:inputField fieldName="Amount__c" />
        <lightning:inputField fieldName="Type__c" />
        <lightning:inputField fieldName="Expense_Date__c" />
        <lightning:inputField fieldName="Description__c"/>
        <lightning:button 
            class="slds-m-top_small" 
            variant="brand" 
            type="submit" 
            name="update" 
            label="Update" />
    </lightning:recordEditForm>
</aura:component>